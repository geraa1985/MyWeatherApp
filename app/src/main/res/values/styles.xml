<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/background</item>
        <item name="android:fontFamily">@font/bad_script</item>

        <item name="saveImage">@drawable/home</item>
        <item name="listImage">@drawable/list</item>
        <item name="yandexImage">@drawable/details</item>
        <item name="wikiImage">@drawable/info</item>
        <item name="optionsImage">@drawable/options</item>
        <item name="settingsImage">@drawable/settings</item>
